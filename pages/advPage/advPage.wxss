.inner-container {
    width: 640rpx;
    margin: 0 auto;
    padding-bottom: 1px;
}

.imgs {
    width: 100%;
    flex-wrap: wrap;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.img {
    -webkit-box-flex: 0;
    flex: 0 0 196rpx;
    height: 137rpx;
    margin-bottom: 28rpx;
    background: #fff;
    box-shadow: 0 10rpx 20rpx 0 rgba(83,83,120,.04);
    border-radius: 30rpx;
}

.content-title{
    height: 180rpx;
}

.content-title .small {
    display: block;
    font-size: 36rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #805fd0;
    line-height: 50rpx;
}

.content-title .big {
    display: block;
    font-size: 50rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 84rpx;
    text-shadow: 0rpx 4rpx 18rpx rgba(21,7,88,.2);
}

.app {
    width: 100%;
    height: auto;
    overflow: hidden;
    font-size: 26rpx;
}

.app  .menu {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    border-bottom: solid 1rpx #f4f5f6;
}

.menu text {
    float: left;
    width: 25%;
    font-size: 30rpx;
    text-align: center;
}

.coupons{
    width: 92%;
    height: auto;
    background: #fff;
    padding: 0 4%;
}

.coupons .item {
    width: 100%;
    height: 160rpx;
    margin-top: 10rpx;
    border: 1rpx solid #e2e2e2;
    border-radius: 10rpx;
    position: relative;
    border-left: 5rpx solid red;
    display: inline-block;
}

.coupons .item .lt {
    float: left;
    width: 25%;
    line-height: 160rpx;
    color: red;
    font-size: 28rpx;
    text-align: center;
    font-weight: bold;
}

.coupons .item .ct {
    width: 50%;
    float: left;
}

.coupons .item .ct .name {
    font-size: 28rpx;
    font-weight: bold;
    margin-top: 10rpx;
}

.coupons .item .ct .man, .coupons .item .ct .date {
    color: #666;
    margin-top: 10rpx;
}

.coupons .item  .rt {
    width: 20%;
    height: 100%;
    float: right;
    border-left: 3rpx #e2e2e2 dotted;
}

.coupons .item  .rt text {
    padding: 5rpx 10rpx;
    background: red;
    color: #fff;
    border-radius: 10rpx;
    margin-top: 56rpx;
    float: right;
    margin-right: 20rpx;
}

.coupons .item  .rt .over {
    padding: 5rpx 10rpx;
    background: #f5f5f5;
    color: #8a8a8a;
    border-radius: 10rpx;
    margin-top: 56rpx;
    float: right;
    margin-right: 20rpx;
}

.image-container {
    width: 100%;
    height: 325rpx;
}

.swiperitem {
    box-sizing: border-box;
    position: relative;
    width: 640rpx;
}

.itemImg {
    width: 640rpx;
    border-radius: 30rpx;
}